<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/TagToProjectList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tagToProjectHome.wire}"/>

   <param name="tagToProjectFrom"/>
   <param name="tagToProjectTagToProjectId" value="#{tagToProjectHome.tagToProjectTagToProjectId}"/>
   <param name="projectFrom"/>
   <param name="projectProjectId" value="#{projectHome.projectProjectId}"/>



   <navigation from-action="#{tagToProjectHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/TagToProject.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tagToProjectHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/TagToProject.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tagToProjectHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TagToProjectList.xhtml"/>
      </rule>
   </navigation>

</page>
