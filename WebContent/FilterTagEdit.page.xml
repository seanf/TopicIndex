<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/FilterTagList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{filterTagHome.wire}"/>

   <param name="filterTagFrom"/>
   <param name="filterTagFilterTagId" value="#{filterTagHome.filterTagFilterTagId}"/>
   <param name="filterFrom"/>
   <param name="filterFilterId" value="#{filterHome.filterFilterId}"/>



   <navigation from-action="#{filterTagHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/FilterTag.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{filterTagHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/FilterTag.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{filterTagHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/FilterTagList.xhtml"/>
      </rule>
   </navigation>

</page>
