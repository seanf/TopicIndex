<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/FilterCategoryList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{filterCategoryHome.wire}"/>

   <param name="filterCategoryFrom"/>
   <param name="filterCategoryFilterCategoryId" value="#{filterCategoryHome.filterCategoryFilterCategoryId}"/>
   <param name="filterFrom"/>
   <param name="filterFilterId" value="#{filterHome.filterFilterId}"/>



   <navigation from-action="#{filterCategoryHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/FilterCategory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{filterCategoryHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/FilterCategory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{filterCategoryHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/FilterCategoryList.xhtml"/>
      </rule>
   </navigation>

</page>
