<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/UserRoleList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{userRoleHome.wire}"/>

   <param name="userRoleFrom"/>
   <param name="userRoleUserRoleId" value="#{userRoleHome.userRoleUserRoleId}"/>
   <param name="userFrom"/>
   <param name="userUserId" value="#{userHome.userUserId}"/>

   <param name="roleFrom"/>
   <param name="roleRoleId" value="#{roleHome.roleRoleId}"/>



   <navigation from-action="#{userRoleHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/UserRole.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userRoleHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/UserRole.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userRoleHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/UserRoleList.xhtml"/>
      </rule>
   </navigation>

</page>
