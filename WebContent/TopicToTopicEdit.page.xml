<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/TopicToTopicList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{topicToTopicHome.wire}"/>

   <param name="topicToTopicFrom"/>
   <param name="topicToTopicTopicToTopicId" value="#{topicToTopicHome.topicToTopicTopicToTopicId}"/>


   <navigation from-action="#{topicToTopicHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/TopicToTopic.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{topicToTopicHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/TopicToTopic.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{topicToTopicHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TopicToTopicList.xhtml"/>
      </rule>
   </navigation>

</page>
