<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/FilterList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{filterHome.wire}"/>

   <param name="filterFrom"/>
   <param name="filterFilterId" value="#{filterHome.filterFilterId}"/>


   <navigation from-action="#{filterHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Filter.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{filterHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Filter.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{filterHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/FilterList.xhtml"/>
      </rule>
   </navigation>

</page>
