<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/TagToCategoryList.xhtml"
      login-required="false">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tagToCategoryHome.wire}"/>

   <param name="tagToCategoryFrom"/>
   <param name="tagToCategoryTagId" value="#{tagToCategoryHome.tagToCategoryId.tag.tagId}"/>
   <param name="tagToCategoryCategoryId" value="#{tagToCategoryHome.tagToCategoryId.category.categoryId}"/>


   <navigation from-action="#{tagToCategoryHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/TagToCategory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tagToCategoryHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/TagToCategory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tagToCategoryHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TagToCategoryList.xhtml"/>
      </rule>
   </navigation>

</page>
