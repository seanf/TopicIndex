<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/TopicToTagList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{topicToTagHome.wire}"/>

   <param name="topicToTagFrom"/>
   <param name="topicToTagTopicToTagId" value="#{topicToTagHome.topicToTagTopicToTagId}"/>


   <navigation from-action="#{topicToTagHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/TopicToTag.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{topicToTagHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/TopicToTag.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{topicToTagHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TopicToTagList.xhtml"/>
      </rule>
   </navigation>

</page>
